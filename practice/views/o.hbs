<script>
  
    let a = +prompt("сом");
    let b = +prompt("тыйын")
    let n = +prompt("количество")

    let som = a * n;
    let tyiyn = b * n;

    if (tyiyn >= 100) {

        let c = Math.trunc(tyiyn / 100);
        let k = tyiyn - (c*100);

        
        alert( (som + c) + ' сом' + ' ' + k + 'тыйын за ' + n + ' пирожков')
    } else {

        alert(som  + ' сом' + ' ' + tyiyn + 'тыйын за ' + n + ' пирожков' )

    }

</script>